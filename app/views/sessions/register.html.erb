<%= image_tag "logo.svg", size: "150x150" %>
<div class="login">
  <div class="flex flex-space-between">
    <%= form_tag sessions_path do %>
      <div class="input-group">
        <label>Email</label>
        <%= text_field_tag :email, nil, autocomplete: "off" %>
      </div>
      <div class="input-group">
        <label>First name</label>
        <%= text_field_tag :firstname, nil, autocomplete: "off" %>
      </div>
      <div class="input-group">
        <label>Last name</label>
        <%= text_field_tag :lastname, nil, autocomplete: "off" %>
      </div>
      <div class="input-group">
        <label>Phone number</label>
        <%= text_field_tag :phonenumber, nil, autocomplete: "off" %>
      </div>
      <div class="input-group">
        <label>Password</label>
        <%= password_field_tag :password, nil, autocomplete: "off" %>
      </div>
      <div class="input-group">
        <label>Confirm password</label>
        <input type="text"/>
      </div>
      <div class="form-actions">
        <%= submit_tag "Submit", class: "btn btn-dark btn-full btn-round" %>
      </div>
    <% end %>

    <%= image_tag "coins.png" %>
  </div>
</div>