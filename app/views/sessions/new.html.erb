<%= image_tag "logo.svg", size: "150x150" %>
<div class="login">
  <div class="flex flex-space-between">
    <%= form_tag sessions_path do %>
      <div class="input-group"> 
        <% if flash[:error] %>
          <div style="color:red;"><%= flash[:error] %></div>
        <% end %>
        <% if flash[:success] %>
          <div style="color:green;"><%= flash[:success] %></div>
        <% end %>
      </div>
      <div class="input-group">
        <label>Email</label>
        <%= text_field_tag :email, nil, autocomplete: "off" %>
      </div>

      <div class="input-group">
        <label>Password</label>
        <%= password_field_tag :password, nil, autocomplete: "off" %>
        <%= link_to "Forgot your password?", user_forgot_path, class: "" %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Submit", class: "btn btn-dark btn-full btn-round" %>
      </div>
      <%= link_to "Register", register_user_path, class: "linkto" %> 
    <% end %>

    <%= image_tag "money-pile.jpg" %>
  </div>
</div>
